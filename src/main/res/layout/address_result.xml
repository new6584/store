<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Place Name and Exit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/search_res_address_head"
            android:layout_width="0dp"
            android:text=""
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:background="@drawable/bevel_background_sharp"
            android:textAlignment="center"
            android:textColor="#ffffff" />
        <!-- EXIT ICON -->
        <ImageView
            android:id="@+id/search_res_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:src="@drawable/ic_close_light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:textAlignment="center">
        <TextView
            android:layout_width="0dp"
            android:textAlignment="inherit"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="@string/direction_prepend_total_distance"/>
        <TextView
            android:id="@+id/search_res_total_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="inherit"
            android:text="@string/direction_prepend_total_duration"/>
        <TextView
            android:id="@+id/search_res_total_duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_res_direction_container"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>


</LinearLayout>