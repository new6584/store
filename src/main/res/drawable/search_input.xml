<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#48d9d5d5" />
        </shape>
    </item>
    <!--Content Background-->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="0dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/inputBackground" />
            <stroke
                android:width="2dp"
                android:color="#acacac" />
        </shape>

    </item>

</layer-list>