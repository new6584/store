<?xml version="1.0" encoding="utf-8"?>
<!--Background element for each odometer cell-->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:centerColor="#d4297cb3"
                android:endColor="#95202020"
                android:startColor="#95202020"
                android:type="linear"
                android:angle="90">
            </gradient>
            <stroke android:width="1dp" android:color="#13ffffff" />
        </shape>
    </item>
</selector>